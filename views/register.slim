section#register_page 
    article#register_section
        h2.section_header Create your account!
        form action="register" method="post"
            input.form_text type="text" name="username" placeholder="Username" 
            input.form_text type="password" name="password" placeholder="Password"
            input.form_text type="password" name="password_confirm" placeholder="Confirm password"
            input.form_submit type="submit" value="Register"
    article#login_section 
        h2.section_header Already have an account?
        #login_box 
            a href="/login" Sign in here!